<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.example.echo"
        version="0.7.0">

    <name>Echo</name>

    <engines>
        <engine name="cordova" version=">=3.4.0"/>
    </engines>

    <js-module name="Echo" src="www/echo.js">
        <clobbers target="Echo" />
    </js-module>

	<platform name="android">
		<config-file target="config.xml" parent="/*">
			<feature name="Echo">
